@using LogicLayer.Core
@model AccountViewModel

<head>
    <meta charset="UTF-8">
    <title>GPT-Poker</title>
    <link rel="stylesheet" href="~/css/Components.css">
    <link rel="stylesheet" href="~/css/Fonts.css">
</head>
<body>

<div id="content-left">
    <div id="content-left-content" style="padding-top: 50px !important;">

        @foreach (var section in Model.Sections)
        {
            var progress = Core.GetSectionProgress(Model.Account, section);
            
            @await Html.PartialAsync("SectionPartial", new SectionViewModel(section, progress))
        }

    </div>
</div>

<div id="content-right">
    <div id="content-right-navbar">

    </div>

    <div id="content-right-content">

    </div>
</div>

</body>