@model SectionViewModel

@if (true)
{ 
    <div class="section-container-unlocked">

        <div class="section-tag-unlocked">
            beginner
        </div>

        <div class="section-title-unlocked">
            @Model.Section.Name
        </div>

        <div class="section-progress-unlocked">
            <progress value="@Model.Section.Id" max="10"></progress>
            <p>@Model.Section.Id / 10</p>
        </div>

        <a class="section-button-unlocked" asp-action="Index" asp-controller="Section" asp-route-sectionId="@Model.Section.Id">continue</a>
        
    </div>
}
else
{
    <div class="section-container-locked">

        <div class="section-tag-locked">
            beginner
        </div>

        <div class="section-title-locked">
            @Model.Section.Name
        </div>

        <div class="section-progress-locked">
            <svg width="15" height="19" viewBox="0 0 15 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 10.9655C1 9.67051 2.05824 8.62069 3.36364 8.62069H11.6364C12.9418 8.62069 14 9.67051 14 10.9655V15.6552C14 16.9502 12.9418 18 11.6364 18H3.36364C2.05824 18 1 16.9502 1 15.6552V10.9655Z" fill="#56646C"/>
                <path d="M11.6364 9.7931V5.10345C11.6364 2.83718 9.78445 1 7.5 1C5.21555 1 3.36364 2.83718 3.36364 5.10345V9.7931M3.36364 18H11.6364C12.9418 18 14 16.9502 14 15.6552V10.9655C14 9.67051 12.9418 8.62069 11.6364 8.62069H3.36364C2.05824 8.62069 1 9.67051 1 10.9655V15.6552C1 16.9502 2.05824 18 3.36364 18Z" stroke="#56646C" stroke-width="2"/>
            </svg>


            <p style="margin-left: 6px">@Model.Section.Id units</p>
        </div>

        <a class="section-button-locked">jump here</a>
    
    </div>
}

